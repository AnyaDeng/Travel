.login
  padding: 0
  min-height 100%
  .photo
    width 100%
    background-size: cover;
    background-image url("../../../common/img/background.jpg")
    background-position top
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  .full-support
    width: 100%
    height: 100%
    padding: 0 0.2rem 0
    position: absolute
    display: flex
    display: -webkit-flex
    flex-direction: column
    justify-content space-between
    -webkit-justify-content: space-between
    align-items: center
    -webkit-align-items: center
    .cntBox
      width: 100%
      background: transparent
      .logo-container
        text-align: center
        margin-bottom: 0.42rem
        .logoSize
          width: 1rem
          height: 1rem
      .form-group
        height: 0.7rem
        margin-bottom: 0.32rem
        .form-label
          margin-bottom: 0.18rem
          padding-left: 0.065rem
        .form-label-code
          margin-bottom: 0.05rem
          padding-left: 0.065rem
        .form-label-font
          font-family: SourceHanSansCN-Regular;
          font-size: 0.14rem
          color: #f2f2f2
        //.validate-errors
        //  margin: 0.04rem 0.05rem 0.18rem;
        .form-control-container
          padding-left: 0.065rem
          width: 100%
        .form-control
          font-family: SourceHanSansCN-Regular;
          margin-bottom: 0.1rem
          border: none
          outline: medium
          width: 100%
          //height: 0.22rem
          height 90%
          background-color: transparent
          font-size: 0.18rem
          color: #d5a764
        input
          &::-webkit-input-placeholder
            font-family: SourceHanSansCN-Regular;
            font-size 0.17rem
            color #7D8497
            letter-spacing 0
        .form-control-code
          font-family: SourceHanSansCN-Regular;
          border: none
          outline: medium
          width: 100%
          //height: 0.22rem
          height 90%
          background-color: transparent
          font-size: 0.17rem
          color: #d5a764
      .btn-container
        .btn-success
          margin 0
    .loginDetail
      width: 100%
      .loginAgreement
        font-family: SourceHanSansCN-Regular
        font-size: 0.12rem
        color: #7D8497
        letter-spacing: 0
        line-height: 0.18rem
        padding: 0 0.11rem 0.12rem
        span
          color: #D5A764
      .btn-container
        .btn-success
          margin 0
      .register
        margin-top 0.3rem
        margin-bottom 0.3rem

.icon-invisible
  position: absolute
  right: 0.2rem

.icon-invisible:before
  font-size: 0.23rem

.icon-visible:before
  font-size: 0.23rem

.icon-visible
  position: absolute
  right: 0.2rem

