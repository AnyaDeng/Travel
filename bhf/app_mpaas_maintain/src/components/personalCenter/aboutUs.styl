@import "../../common/stylus/mixin.styl";
.container-fluid
  padding-top 0.55rem
  text-align center
  font-family: SourceHanSansCN-Regular
  .logo
    height 1.1rem
    width 1.1rem
    margin 0rem auto 0.05rem
    bg-image('img/logo')
    background-size 100%
    border-radius 0.15rem
    //box-shadow 0.02rem 0.02rem 0.2rem rgba(0, 0, 0, .35)
  .version
    color #8a91a2
    font-size 0.13rem
    span
      font-family 'Roboto-Regular'
  .row
    margin-top 0.45rem
    .list-group
      .list-group-item
        font-size 0.14rem
        height 0.55rem
        &:last-child
          border none
        .title
          color #8a91a2
        .text
          text-align right
          color #232323
          font-family 'Roboto-Regular'
        .updateSpot
          width 0.08rem
          height 0.08rem
          border-radius 50%
          display inline-block
          background #FF3A38
          margin-right 0.04rem
        .icon-advance:before
          color: #7D8497
  .company
    width 100%
    text-align center
    position fixed
    bottom 0.2rem
    font-size 0.13rem
    color #8a91a2
