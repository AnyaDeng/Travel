@import '../../../common/stylus/mixin.styl';
.investmentFrontPage
  height: 100%
  padding: 0 0 0.45rem
  font-family: SourceHanSansCN-Regular
  background: #F7F7F9
  .swiper-container-treasure
    width: 100%
    height: calc(100% - 0.51rem)
    .swiper-wrapper
      width: 100%
      height: 100%
      .swiper-slide
        width: 100%
        height: 100%
        overflow-y: auto
        display: flex
        flex-direction: column
        &::-webkit-scrollbar //隐藏滚动条
          display: none
  .yo-scroll.refresh, .yo-scroll.touch, .yo-scroll.down
    height: 100%
    top: 0 !important // 此处需覆盖原组件行内样式,暂用!important
    .inner
      height: 100%
      .pull-refresh
        background: #F7F7F9
  .yo-scroll.refresh
    .inner
      .pull-refresh
        height: 3.1rem
  .wrap
    flex: 1 0 auto
  .tip
    flex-shrink: 0
  .product-content
    display: flex
    display: -webkit-flex
    flex-direction: column
    justify-content: space-between
    align-items: center
    -webkit-align-items: center
    min-height: 100%
    .cntBox
      width: 100%
      background: #ffffff
      padding-top: 0.08rem
      margin: 0.1rem 0 0.18rem
    .noProduct_top
      padding-top: 0.9rem
    .product-list
      margin: 0 0 0.2rem
      .list-header
        padding: 0.15rem 0.2rem
        .list-header-title
          span
            color: #182136
            font-size: 0.18rem
            font-family: SourceHanSansCN-Medium
        .list-header-link
          span
            color: #AAB1C4
            font-size: 0.13rem
            font-family: SourceHanSansCN-Normal
          .icon-advance
            font-size: 0.12rem
            margin-left: 0
            &:before
              color #AAB1C4
      .introduce
        padding: 0 0.2rem
        font-family: SourceHanSansCN-Normal
        color: #7D8497
        font-size: 0.13rem
        line-height: 0.18rem
      .tabBar
        background-color #fff
        .buttons-tab
          height 0.43rem
          overflow: auto
          &::-webkit-scrollbar //隐藏滚动条
            display: none
          .tabBtn
            font-family: SourceHanSansCN-Medium
            font-size: 0.16rem
            color: #182136
            width: auto
            margin: 0 0.1rem 0 0.2rem
            padding: 0.12rem 0
            white-space: nowrap
          .tabBtn.active
            font-family: SourceHanSansCN-Medium
            font-size: 0.16rem
            color: #CC924F
            border-bottom: 0.03rem solid #D7A853
            z-index 2
        .content-block
          height: calc(100% - 1.168rem)
      .list-group
        ul
          list-border-top-1px(1px, #e6e6e6)
          min-height: 0.905rem
          .listFilterModule
            padding: 0 0 0.1rem
            list-border-bottom-1px(1px, #e6e6e6)
          .moduleIntroduce
            padding: 0.1rem 0.2rem 0
            font-family: SourceHanSansCN-Normal
            color: #7D8497
            font-size: 0.12rem
            line-height: 0.18rem
          .message-noProduct
            text-align center
            height: 0.9rem
            line-height: 0.9rem
            color: #7D8497
            font-size: 14px
            font-family: SourceHanSansCN-Regular
            font-weight: 400
          .list-group-item
            display: flex
            display: -webkit-flex
            align-items: center
            -webkit-align-items: center
            min-height: 0.905rem
            box-sizing: border-box
            .produceBox
              position: relative
              width: 100%
              display: flex
              display: -webkit-flex
              align-items: flex-end
              -webkit-align-items: flex-end
              overflow hidden
              .productCnt-left
                min-width: 1.15rem
                div:first-child
                  color: #CC924F
                  font-size: 0.15rem
                  margin-bottom: 0.09rem
                  span
                    color: #CC924F
                    font-size: 0.23rem
                    font-weight: bold
                  span.increaseInterest
                    font-size: 0.15rem
                    font-weight: bold
                    color: mainColor
                div:last-child
                  color: #7D8497
                  font-size: 0.12rem
              .productCnt-right
                display: flex
                display: -webkit-flex
                justify-content space-between
                -webkit-justify-content: space-between
                align-items: flex-end
                -webkit-align-items: flex-end
                flex-grow: 1
                .img-fullScale, .img-soldOut
                  position: absolute
                  right: 0
                  top: 50%
                  transform: translate(0%, -50%)
                  z-index: 6
                .cntTxt
                  position: relative
                  z-index: 5
                  min-height: 0.395rem
                  display: flex
                  display: -webkit-flex
                  flex-direction: column
                  justify-content: space-between
                  -webkit-justify-content: space-between
                  align-items: flex-start
                  -webkit-align-items: flex-start
                  .productName
                    width 1.9rem
                    white-space: nowrap
                    text-overflow: ellipsis
                    overflow: hidden
                  div
                    color: #232323
                    font-size: 0.14rem
                  div.fundInner
                    font-family: SourceHanSansCN-Regular

                  div.onSaleTime
                    display: flex
                    display: -webkit-flex
                    align-items: center
                    -webkit-align-items: center
                    margin-bottom: 0.085rem
                  div.productDetails
                    display: flex
                    display: -webkit-flex
                    align-items: center
                    -webkit-align-items: center
                    margin: 0.065rem 0 0 0.01rem
                    div
                      font-family: SourceHanSansCN-Normal
                      color: #7D8497
                      font-size: 0.12rem
                      margin-right: 0.04rem
                      white-space: nowrap
                      span
                        font-family Roboto-Regular
                      .demand
                        display inline-block;
                        width 0.02rem;
                        height 0.02rem;
                        border-radius 50%;
                        background-color #7d8497
                    .donateImg
                      bg-image('../../../common/img/donateImg')
                      width 0.26rem
                      height 0.12rem
                      animation donateRotate 1s infinite
          .list-group-item:last-child
            list-border-bottom-1px(1px, #e6e6e6)
          li.theGrey
            .produceBox
              .productCnt-left
                div:first-child
                  color: greyColor
                  span
                    color: greyColor
                div:last-child
                  color: greyColor
              .productCnt-right
                .img-fullScale, .img-soldOut
                  position: absolute
                  right: 0
                  top: 50%
                  transform: translate(0%, -50%)
                  z-index: 6
                .cntTxt
                  position: relative
                  z-index: 5
                  div
                    color: greyColor
                  div.productDetails
                    margin-top: 0.065rem
                    div
                      color: greyColor
                      span
                        color: greyColor !important
                    .privilege
                      background greyColor !important
    .pageModuleTitle
      background: #ffffff
      margin: 0
      padding: 0.05rem 0 0.2rem
  .center-swiper-box
    background: #ffffff
    padding: 0 0 0.2rem
    .center-swiper-box-inner
      width: 3.35rem
      height: 0.77rem
      //border-radius: 0.05rem
      //border: 0.01rem solid #e6e6e6
      .swiper-pagination-bullets
        bottom: 0.04rem !important

  .bankIntroducePopup
    .showBcBackground
      min-width: 2.81rem
      min-height: 3.5rem
      max-height: 4.8rem
      overflow: auto
      border-radius: 0.08rem
      &::-webkit-scrollbar //隐藏滚动条
        display: none
      img
        height: auto
    .borderRadius024
      border-radius: 50%
  .emptyModule
    background: #ffffff
    margin: 0.1rem 0
    .skeletonModule
      padding: 0.12rem 0 0
      .van-skeleton
        padding: 0 0.2rem 0.12rem
        .van-skeleton__content
          padding-top: 0
        .van-skeleton__title+.van-skeleton__row
          margin-top: 0.12rem
    .noProduct
      .img-noProduct
        margin-top: 0.1rem
        width: 1.77rem
        height: 0.725rem
        bg-image('../../../common/img/queryFailed')
      .warn-noProduct
        margin: 0.3rem 0 0
        font-family: SourceHanSansCN-Regular
        font-size: 0.15rem
        color: #7D8497
        span
          margin: 0 0 0.15rem
      .refreshBtn
        display: flex
        display: -webkit-flex
        justify-content: center
        -webkit-justify-content: center
        align-items: center
        -webkit-align-items: center
        flex-direction: column
        span
          font-family: SourceHanSansCN-Regular
          font-size: 0.15rem
          color: #7D8497
          letter-spacing: 0
          text-align: center
          margin: 0 0 0.1rem
          padding: 0.075rem 0.27rem
          border: 0.01rem solid #7D8497
          border-radius: 0.21rem
