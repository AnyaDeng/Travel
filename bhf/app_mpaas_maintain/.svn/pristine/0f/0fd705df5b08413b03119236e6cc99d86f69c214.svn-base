bg-image($url)
  background-size contain
  background-repeat no-repeat
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio)
    background-image url($url + "@3x.png")

border-radius(values)
  -webkit-border-radius: values
  -moz-border-radius: values
  border-radius: values

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-aspect-ratio: 1.5) {
  //上下边线配置
  .list-group-item, .list-group ul, .list-group ul .listFilterModule, .photo li, ul li div.login, .list-group li, .keyStyle tr, .basketBox, .passWordBasketBox, .topTitleBorder, .popupScreen .scroller-indicator, .popupScreen .list-group-item-clear, .modal-footer, .bindBankCard .borderLine, .fullName, .borderBottoms, .borderBottomsMobile, .borderBottomsPwd, .captcha, .registerResult .login, .form-border, .strListBottom, .item_selected, item_selected_border, .lineAdapter, .current .content .tabBar .buttons-tab div, .loadMore, .listShowCtrl {
    &:before, &:after {
      transform: scaleY(0.7); //1.5 * 0.7接近1
    }
  }

  //左右边线配置
  a.btn-default, a.btn-active, .keyStyle tr td, .passWordBasket, .popupScreen .checker-default {
    &:before, &:after {
      transform: scaleX(0.7); //1.5 * 0.7接近1
    }
  }
}

