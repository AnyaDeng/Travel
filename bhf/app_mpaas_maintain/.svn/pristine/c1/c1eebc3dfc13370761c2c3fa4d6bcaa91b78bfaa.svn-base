@import '../../../common/stylus/mixin.styl';
.navigation
  position fixed
  bottom 0
  left 0
  width 100%
  height 0.5rem
  //border-top 0.01rem solid #eaeaea
  box-shadow: 0 -1.5px 2px 0 rgba(0,0,0,0.03);
  background #fff
  a
    /*width 25%*/
    float left
    span
      &.icon
         display: inline-block
         width: 0.27rem
         height: 0.27rem
         margin-bottom: 0.02rem
      &.icon-homeImg
        bg-image('./img/home')
      &.icon-treasureImg
        bg-image('./img/treasure')
      &.icon-assetImg
        bg-image('./img/asset')
      &.tab-label
        font-family: SourceHanSansCN-Normal
        color #7D8497
        font-size 0.10rem
        margin-bottom 0.065rem
    &.tabActive
      span
        color #dcc996
        &:before
          color #dcc996
  .router-link-exact-active
    &.router-link-active
      .tab-label
        color #182136
    span
      &:before
        color #D5A664
      &.icon-homeImg
        bg-image('./img/home-active')
      &.icon-treasureImg
        bg-image('./img/treasure-active')
      &.icon-assetImg
        bg-image('./img/asset-active')
