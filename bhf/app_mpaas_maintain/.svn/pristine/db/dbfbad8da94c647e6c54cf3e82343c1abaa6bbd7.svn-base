@import '../../../common/stylus/mixin.styl';
.unloginHomePage
  min-height: 100%
  background: #ffffff
  .container-fluid
    padding-bottom: 0.5rem
    background: #ffffff
    .productBanner
      margin-bottom 0.1rem
    .swiper-container-box
      position: relative
      .logoBox
        padding: 0.19rem 0.42rem
        width: 100%
        position: absolute
        top: 0
        left: 0
        z-index: 5
        display: flex
        display: -webkit-flex
        justify-content space-between
        -webkit-justify-content: space-between
        align-items: center
        -webkit-align-items: center
        span
          display: inline-block
        span.tencentLogo
          width: 0.96rem
          height: 0.255rem
          bg-image('../../../common/img/tencentLogo')
          background-repeat: no-repeat
          background-size: contain
        span.chinaLifeLogo
          width: 0.96rem
          height: 0.255rem
          bg-image('../../../common/img/chinaLifeLogo')
          background-repeat: no-repeat
          background-size: contain
        span.delimiter
          height: 0.2rem
          border-right: 0.01rem solid #C49E63
      .swiper-wrapper
        z-index: 9
        .swiper-slide
          padding: 0.2rem 0 0 0.26rem
          .carousel-inner
            margin-top: 0.48rem
            div:first-child
              width: 0.875rem
              height: 0.26rem
              bg-image('../../../common/img/bhfaeLogo')
              background-repeat: no-repeat
              background-size: contain
              margin-bottom: 0.06rem
            div:nth-of-type(2)
              font-family: SourceHanSansCN-Bold
              font-weight: bold
              font-size: 0.31rem
              color: #E9C68C
              letter-spacing: 0
              text-shadow: 0.015rem 0.015rem 0.03rem rgba(37,48,104,1)
              background: linear-gradient(135deg, #EDBE8A 0%, #F7E2BD 51%, #D5A070 100%)
              -webkit-background-clip: text
              //-webkit-text-fill-color: transparent
            div:nth-of-type(3)
              font-family: SourceHanSansCN-Regular
              //width: 1.44rem
              width: 100%
              min-height: 0.54rem
              font-size: 0.12rem
              line-height: 0.18rem
              color: #F7D99D
              margin: 0.1rem 0 0.165rem
        .bannerZhuoyue
          bg-image('../../../common/img/banner-zhuoyue')
          background-position: bottom center
          background-size: 100% auto
        .bannerAnquan
          bg-image('../../../common/img/banner-anquan')
          background-position: bottom center
          background-size: 100% auto
        .bannerZhenggui
          bg-image('../../../common/img/banner-zhenggui')
          background-position: bottom center
          background-size: 100% auto
      .swiper-pagination-bullets
        width: 100%
        bottom 0.12rem
      .bannerArc
        width: 100%
        height: 0.26rem
        bg-image('../../../common/img/banner-arc')
        background-size: 100% 100%
        position: absolute
        bottom: -0.01rem
        left: 0
        z-index: 8
    .openWealth
      width: 2.57rem
      height: 0.41rem
      border-radius(0.04rem)
      display: flex
      display: -webkit-flex
      justify-content: center
      -webkit-justify-content: center
      align-items: center
      -webkit-align-items: center
      background: linear-gradient(135deg,rgba(237,190,138,1) 0%,rgba(213,160,112,1) 100%)
      box-shadow: 0.02rem 0.02rem 0.1rem 0 rgba(131,101,49,0.45)
      //margin-top: 0.955rem
      position: fixed
      left: 50%
      bottom: 0.67rem
      transform: translate(-50%, 0)
      span
        font-family: SourceHanSansCN-Medium
        font-size: 0.17rem
        color: #ffffff
